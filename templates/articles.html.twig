{% extends 'base.html.twig' %}
{% block body %}

<div class="container containerArticle">

    <div class="articleP">
    </div>
    <div class=" articleblock text-center">
        {% for article in articles %}
        <div id="article-{{ article.id }}" class="articleMove col-sm-4">
            <h3>{{ article.titre_article }}</h3>
            <img class="img-responsive" src="{{ article.image }}" alt="{{ article.titre_article }}">
            <p>{{ article.description }}</p>
         </div>
        {% endfor %}
    </div>



</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $( document ).ready(function() {
            $("#article-{{ id }}").click();
        });
    </script>
{% endblock %}
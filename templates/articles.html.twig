{% extends 'base.html.twig' %}
{% block body %}

<div class="container containerArticle">

    <div class="articleP">
        {{ id }}
    </div>
    <div class=" articleblock ">
        {% for article in articles %}
        <div  class="articleMove col-sm-4">
            <h3>{{ article.titre_article }}</h3>
            <img class="img-responsive" src="{{ article.image }}" alt="{{ article.titre_article }}">

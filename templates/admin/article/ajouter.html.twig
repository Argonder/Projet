{%  extends 'base-admin.html.twig' %}

   {% block body %}
       <div class="container">

           <div class="form-inline">
               <p><b>Cr√©ation d'Article</b></p>
               <!-- FORMULAIRE -->
               {{ form_start(form) }}
               {{ form_widget(form) }}
               <button type="submit" class="btn btn-warning" value="publier">Envoyer</button>
               {{ form_end(form) }}
           </div>

               <div  class="table-responsive">
                   <table class="table table-striped">
                       <thead>
                           <tr>
                               <th scope="col">Titre Article</th>
                               <th scope="col">Description Article</th>
                               <th scope="col">Image Article</th>
                               <th scope="col">Actions</th>
                           </tr>
                       </thead>
                       {% for article in articles %}
                       <tr>
                           <td><h3>{{ article.titre_article }}</h3></td>
                           <td><p>{{ article.description }}</p></td>
                           <td><img class="img-responsive articleImg" src="{{ asset(article.image) }}" alt="{{ article.titre_article }}"></td>
                           <td><a href="{{ path('modif_article', {'id': article.id}) }}">Modifier</a></td>
                           <td><a href="{{ path('supprim_article', {'id': article.id}) }}">Supprimer</a></td>
                       </tr>
                       {% endfor %}
                   </table>
               </div>


       </div>
   {% endblock %}

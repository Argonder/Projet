{%  extends 'base-admin.html.twig' %}

   {% block body %}
       <div class="container">

           <h3>Modifier le Slider</h3>
           <!-- image deja presente dans le slider -->

           <div class="row imageslider">

                {% for slider in product %}

                    <div style="display:inline-block;">
                        <img style="display: block;" src="../../{{ slider.image }}" alt="{{ slider.libelle }}">
                        <a href="{{ slider.id }}">modifier</a>
                    </div>

                {% endfor %}

           </div>

           <!-- Ajout d'une image -->
           <btn class="ferm fa fa-times btn btn-default  col-xs-offset-3"></btn>
           <div class="btn-formslider btn btn-default">
               <p>Ajouter une image dans le slider.</p>
           </div>
           <div class="form-inline">
               <!-- FORMULAIRE -->
               {{ form_start(form) }}
               {{ form_widget(form) }}
               <button type="submit" class="btn btn-warning" value="publier">Envoyer</button>
               {{ form_end(form) }}
           </div>
       </div>

   {% endblock %}

                <li><a href="{{ path('app_insertSlider') }}" alt="Slider">Slider</a></li>
                <li><a href="#" alt="Presentation">Presentation</a></li>
                <li><a href="#" alt="Contact">Contact</a></li>
            </ul>
        </nav>
        <!-- Fin menu Responsive -->

        <div class="row">
            <div class="navbar_admin col-xs-2">
                <ul>
                    <li><a href="{{ path('app_addarticle') }}" alt="Article">Articles</a></li>
                    <li><a href="{{ path('app_insertSlider') }}" alt="Slider">Slider</a></li>
                    <li><a href="#" alt="Presentation">Presentation</a></li>
                    <li><a href="#" alt="Contact">Contact</a></li>
                </ul>
            </div>

            <div class="container adminContainer col-xs-10">
            {% block body %}
            {% endblock %}
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>

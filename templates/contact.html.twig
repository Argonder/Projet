{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h2>Contact</h2>
        <p> Contactez-moi par téléphone au: 00.00.00.00 <br>
        ou par email au: test@email.com
        </p>

        <form class="form-contact">
            <div class="form-inline">
                <div class="form-group">
                    <label for="nom">Name</label>
                    <input type="text" class="form-control" id="nom" placeholder="Jane Doe">
                </div>

                <div class="form-group">
                    <label for="eamil">Email</label>
                    <input type="email" class="form-control" id="eamil" placeholder="jane.doe@example.com">
                </div>
            </div>

            <div class="form-horizontal">
                <textarea class="form-control " type="text" rows="5" placeholder="message..."></textarea>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button  type="submit" class="btn btn-default">Sign in</button>
                    </div>
                </div>
            </div>
        </form>

    </div>

{% endblock %}
{% extends 'base.html.twig' %}

{% block body %}
<body class="body_contact">
    <div class="headercontact"><h2 class="text-center">Contact</h2></div>
    <div class="container">
        <div class="contact">
            <div class="contact-block">
                <h1>Jane Doe</h1>
                {% for contact in contacts %}
                    <i class="fa fa-phone"></i> {{ contact.telephone }} <br>
                    <i class="fa fa-envelope"></i> {{ contact.email }}
                {% endfor %}
                <hr>
                <span id="email_span">Contactez-moi</span>
            </div>

            <!-- Formulaire -->
            <form class="form-contact">
                <div class="form-inline">
                    <div class="form-group">
                        <label for="nom">Name</label>
                        <input type="text" class="form-control" id="nom" placeholder="Jane Doe">
                    </div>

                    <div class="form-group email-form">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" placeholder="jane.doe@example.com" required>
                    </div>
                </div>

                <div class="form-horizontal">
                    <textarea class="form-control" type="text" rows="5" placeholder="message..."></textarea>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">



                            <button  type="submit" class="btn btn-default btn-envoi">Envoyer</button>
                            <a href="mailto:name@gmail.com">Click here to mail</a>

                        </div>
                    </div>
                </div>
            </form>
            <!-- Fin Formualaire -->
        </div>
    </div>
</body>
{% endblock %}